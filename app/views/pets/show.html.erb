<h1>Dashboard for <%= @pet.name %> </h1>

<% if @pet.sitter_records.count > 0 %>
  <% if @sitter_ids.include?(@current_user.id) %>
    <h4><%= link_to "Create Report", report_path %></h4>
    <% end %>
<% end %>


  <h2>Reports</h2>
  <% @pet.reports.each do |r| %>
  <div class= "reportcard">
    <div class= "time">
      <%= r.created_at.strftime("%A %b %e %Y") %>
    </div>
    <div class= "activity">
      Activity:<%= r.activity %>
    </div>
    <div class= "emotion">
      Mood:<%= r.emotion %>
    </div>
    <div class= "images">
      <% r.images.each do |i| %>
        <%= image_tag i.image_url.url(:image) %>
      <% end  %>
    </div>
  </div>
  <% end  %>
